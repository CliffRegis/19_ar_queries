<h1>Create a Movie</h1>

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :release_year %>
  <%= f.text_field :release_year %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <p>
    Add A Category
  </p>
  <%= f.fields_for :categories do |cf| %>
    <%= cf.label :name %>
    <%= cf.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
